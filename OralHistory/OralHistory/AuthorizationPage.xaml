<Page
    x:Class="OralHistory.AuthorizationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OralHistory"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Image Source="/Images/OralHistory-Background.png"/>
        <Button x:Name="Authorization_btn" Content="Continue" Margin="0,862,0,0" VerticalAlignment="Top" Height="65" Width="289" HorizontalAlignment="Center" Background="#FFCE9708" Foreground="White" FontSize="30" CornerRadius="12,12,12,12" FontWeight="Normal" FontFamily="Segoe UI" Click="Authorization_btn_Click"/>
        <TextBlock x:Name="reference_title" HorizontalAlignment="Left" Margin="95,387,0,0" TextWrapping="Wrap" Text="Reference Information" VerticalAlignment="Top" FontSize="42" FontWeight="Bold" Foreground="Black"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="61,529,0,0" TextWrapping="Wrap" Text="This is new text to test if the new background image shows up" VerticalAlignment="Top" Height="137" Width="242"/>

    </Grid>
</Page>
