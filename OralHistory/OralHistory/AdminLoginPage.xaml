<Page
    x:Class="OralHistory.AdminLoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OralHistory"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Image Source="Images/Welcome Page.png" Stretch="Fill"/>
        <Rectangle HorizontalAlignment="Center" Height="449" Stroke="Black" VerticalAlignment="Top" Width="429" Fill="#FFD2D5E0" StrokeThickness="8" StrokeLineJoin="Round" StrokeDashCap="Round" Margin="0,299,0,0"/>
        <TextBlock x:Name="loginTitle" HorizontalAlignment="Center" Margin="0,345,0,0" TextWrapping="Wrap" Text="Admin Login" VerticalAlignment="Top" RequestedTheme="Light" FontSize="36"/>
        <TextBox x:Name="userNameTextBox" HorizontalAlignment="Left" Margin="688,429,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="202" Height="42" FontSize="20" RequestedTheme="Light"/>
        <TextBlock x:Name="usernameTitle" HorizontalAlignment="Left" Margin="564,437,0,0" TextWrapping="Wrap" Text="Username:" VerticalAlignment="Top" FontSize="20" RequestedTheme="Light"/>
    </Grid>
</Page>
